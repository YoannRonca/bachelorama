<div class="wrapper">
  <div class="row" style="height: 80vh">
    <div class="col-md-6 col-md-offset-3">
      <h2>Add a review</h2>
      <%= simple_form_for [@animation, @review] do |f| %>
        <%= f.input :rating , collection: 0..5 %>
        <%= f.input :content %>
        <%= f.submit class: "btn btn-medium"%>
        <%= link_to "Back", animations_path, class: 'btn btn-medium' %>
      <% end %>
      </div>
  </div>
</div>

