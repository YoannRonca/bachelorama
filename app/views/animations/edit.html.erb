<div class="wrapper-form" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.2)), url(https://res.cloudinary.com/dydwtoubz/image/upload/v1550844293/balloons-birthday-bright-796606.jpg)">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Add your animation</h2>
      <%= simple_form_for(@animation) do |f| %>
        <%= f.input :title, placeholder: 'Enter your title' %>
        <%= f.input :category, collection: Animation::CATEGORIES, as: :select %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :photo %>

        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit class: "btn btn-medium" %>
      <% end %>
      </div>
  </div>
</div>

