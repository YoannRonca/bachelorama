<div class="wrapper">
  <div class="row" style="height: 79vh">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="title">Book this animation <%= @animation.title %></h1>
        <%= simple_form_for [@animation, @booking] do |f| %>
        <%= f.input :place, label: "Where is it going to take place?", placeholder: "Your city"%>
        <%= f.input :arrival_time, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :departure_time, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.submit "Book now", class: 'btn btn-medium' %>
        <%= link_to "Back", animation_path(@animation), class: 'btn btn-medium' %>
      <% end %>
    </div>
  </div>
</div>


